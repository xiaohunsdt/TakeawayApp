.container-contain {
  padding: 30rpx 10rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
}

.order-number, .estimated-arrival-time {
  text-align: center;
  padding: 10rpx 30rpx;
}

.order-number .number, .estimated-arrival-time .time {
  font-weight: bolder;
}

.order-number .text, .estimated-arrival-time .text {
  font-size: 28rpx;
  display: flex;
  justify-content: center;
}

.order-number .text .text-img, .estimated-arrival-time .text .text-img {
  margin-right: 10rpx;
  margin-top: 5rpx;
  width: 30rpx;
  height: 30rpx;
}

.pay-way-title {
  font-size: 40rpx;
  font-weight: bolder;
}