.action-btn {
  color: black !important;
  margin-left: 10rpx;
}

.container-contain {
  padding: 30rpx 10rpx;
}

.order-items {
  margin-bottom: 22rpx;
}

.delivery-price-view {
  display: flex;
  justify-content: flex-end;
  padding-bottom: 16rpx;
  font-weight: bolder;
  font-size: 25rpx;
}

.delivery-price-view .delivery-str,
.delivery-price-view .delivery-price {
  display: inline-block;
  line-height: 20rpx;
}

.delivery-price-view .delivery-price {
  color: #FFD200
}

.order-amount {
  font-weight: bolder;
  font-size: 25rpx;
  text-align: right;
}

.action-btns {
  margin-top: 35rpx;
  text-align: right;
}

.order-row {
  display: flex;
  justify-content: start;
  align-items: baseline;
  font-size: 25rpx;
  margin: 20rpx 0;
}

.order-row .title {
  color: gray;
  width: 150rpx;
}

.order-row .content {
  color: gray;
  width: calc(100% - 150rpx);
}

.order-header {
  display: flex;
  justify-content: space-between;
}

.order-number,
.estimated-arrival-time {
  text-align: center;
  padding: 10rpx 30rpx;
}

.order-number .number,
.estimated-arrival-time .time {
  font-weight: bolder;
}

.order-number .text,
.estimated-arrival-time .text {
  font-size: 28rpx;
  display: flex;
  justify-content: center;
}

.order-number .text .text-img,
.estimated-arrival-time .text .text-img {
  margin-right: 10rpx;
  margin-top: 5rpx;
  width: 30rpx;
  height: 30rpx;
}