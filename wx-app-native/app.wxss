@import "/miniprogram_npm/@vant/weapp/common/index.wxss";
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

page {
  position: relative;
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
}

.container {
  box-sizing: border-box;
  background-color: #F0F0F0;
  min-height: 100%;
  width: 100%;
}

.container-contain {
  position: relative;
  z-index: 100;
}

.gradientview {
  position: absolute;
  background: linear-gradient(#FFD200, white, #F0F0F0);
  width: 100%;
  height: 700rpx;
}