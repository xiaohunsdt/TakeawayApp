<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
    <mapper namespace="net.novaborn.takeaway.goods.dao.IGoodsDao" >

    <select id="selectByName" resultType="Goods">
        SELECT * FROM `goods`
        <where>
            `name` = #{name}
            AND deleted = 0
        </where>
    </select>

    <select id="getGoodsListByCategoryId" resultType="Goods">
        SELECT * FROM `goods`
        <where>
            `category_id` = #{categoryId}
            AND deleted = 0
        </where>
        ORDER BY `create_date` ASC
    </select>

    <select id="getGoodsListByFlag" resultType="Goods">
        SELECT * FROM `goods`
        <where>
            `flags` like '%${flag}%'
            AND deleted = 0
        </where>
        ORDER BY `create_date` ASC
    </select>

    <select id="getGoodsListByPage" resultType="Goods">
        SELECT * FROM `goods`
        <where>
            <if test="args.name != '' and args.name != null">
                `name` like '%${args.name}%'
            </if>
            <if test="args.categoryId != '' and args.categoryId != null">
                AND `category_id` = #{args.categoryId}
            </if>
            <if test="args.state != '' and args.state != null">
                AND `state` = #{args.state}
            </if>
            AND deleted = 0
        </where>
        ORDER BY `create_date` ASC
    </select>
</mapper>