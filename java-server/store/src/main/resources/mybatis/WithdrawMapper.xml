<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.novaborn.takeaway.store.dao.IWithdrawDao">
    <select id="getListByPage" resultType="Withdraw">
        select * from `store_withdraw`
        <where>
            <if test="args.storeId != null and args.storeId != ''">
                AND `store_id` = #{args.storeId}
            </if>
<!--            <if test="args.state != null and args.state != ''">-->
<!--                AND `state` = #{args.state.code}-->
<!--            </if>-->
            <if test="args.startDate !=null and args.startDate != '' and args.endDate != null and args.endDate != ''">
                AND `create_date` BETWEEN #{args.startDate} AND DATE_ADD(#{args.endDate},INTERVAL 1 DAY)
            </if>
            AND deleted = 0
        </where>
        ORDER BY `create_date` DESC
    </select>
</mapper>