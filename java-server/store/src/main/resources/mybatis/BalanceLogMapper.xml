<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.novaborn.takeaway.store.dao.IBalanceLogDao">
    <select id="getListByPage" resultType="BalanceLog">
        select * from `store_balance_log`
        <where>
            <if test="args.storeId != null and args.storeId != ''">
                AND `store_id` = #{args.storeId}
            </if>
            <if test="args.type != null and args.type != ''">
                <if test="args.type == 1">
                    AND `money` > 0
                </if>

                <if test="args.type == 0">
                    AND `money` &lt; 0
                </if>
            </if>
            <if test="args.startDate !=null and args.startDate != '' and args.endDate != null and args.endDate != ''">
                AND `create_date` BETWEEN #{args.startDate} AND DATE_ADD(#{args.endDate},INTERVAL 1 DAY)
            </if>
            AND deleted = 0
        </where>
        ORDER BY `create_date` DESC
    </select>
</mapper>